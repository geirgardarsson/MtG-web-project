extends layout

block content
  h1= 'Reiknivél fyrir mana kostnað'
  p= 'hjálpar þér að segja til um blablablab'
  p= title

  form(method='post', action='/calc')
    div
      label(for='size') Fjöldi spila í stokknum hjá þér:
      input(type='number', name="tala" min='40', placeholder=geir, required)
    div
      label(for='lands') fjöldi landa sem þú vilt hafa:
      input(type='number', name='', placeholder='23', required)
    div
      label(for='Colors') fjöldi lita í stokknum:
      input(type='number', name='',min=1, max=6, placeholder='1', required)

    div
      input(type='submit', name='reikna út fjöldi landa')
  p Þú slóst inn:
  p= geir
  p Úr því fundust tölurnar:
  p #{numbers}
  p Margfeldi þeirra er:
  p #{number}
  p Þættir tölunnar eru:
  p #{factors}
