extends layout

block content

  h1= 'Reiknivél fyrir mana kostnað'
  p(class='test2')= 'hjálpar þér að finna út nákvæmlega hversu mikið mana þú átt að hafa af hverjum lit'
  form(method='post', action='/calc', class='test')
    div
      label(for='size') Fjöldi Svarta mana tákna:
      input(type='number', name="black" min='0', placeholder=0)
    div
      label(for='size') Fjöldi Blárra mana tákna:
      input(type='number', name="blue" min='0', placeholder=0)
    div
      label(for='size') Fjöldi Rauðra mana tákna:
      input(type='number', name="red" min='0', placeholder=0)
    div
      label(for='size') Fjöldi Græna mana tákna:
      input(type='number', name="green" min='0', placeholder=0)
    div
      label(for='size') Fjöldi Hvítra mana tákna:
      input(type='number', name="white" min='0', placeholder=0)
    div
      label(for='size') Fjöldi Litlausa mana tákna:
      input(type='number', name="grey" min='0', placeholder=0)
    div(class='test2')
      label(for='lands') fjöldi landa í stokknum þínum:
      input(type='number', name="lands", min='1', placeholder='23', required)
    div
      input(type='submit', name='reikna út fjöldi landa')

    if checker !== 6
      if black
        p Fjöldi Svartra landa:
        p #{black}
      if blue
        p Fjöldi Blárra landa:
        p #{blue}
      if red
        p Fjöldi Rauðra landa:
        p #{red}
      if green
        p Fjöldi Grænna landa:
        p #{green}
      if white
        p Fjöldi Hvíta landa:
        p #{white}
      if grey
        p Fjöldi Grára landa:
        p #{grey}
    else
      p Þú slóst ekki inn neitt
  a(href='/advancedsearch', class='test') Ítarleg leit
  a(href='/calc') Reiknvél
  a(href='/') Heim
