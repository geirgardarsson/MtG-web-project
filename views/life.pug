extends layout

block content
  ul(class='topnav')
    li(class='topnav-li')
      a(class='topnav-a' href='/') Home
    li(class='topnav-li')
      a(class='topnav-a' href='/advancedsearch') Advanced search
    li(class='topnav-li')
      a(class='topnav-a' href='/calc') Calculator
    li(class='topnav-li')
      a(class='topnav-a-active' href='/lifecounter') Life total
  div(class='calc-top-container')
    h1(class='calc-top') Life counter
    p(class='calc-p-input') Keeps track of the life total of all the players (2-10 players)
  div(class='life-main-container')
    - for (var x = 0; x < players; x++)
        div(class='life-stat-container')
          p(class='calc-p-input')
            |Player #{x+1} life
          div(class='calc-input')
            input(type='number', name="player#{x+1}" min='0' value=life , class='life-number-input')
        div
          p(class='calc-p-input')
            |PLayer #{x+1} poison counter
          div(class='calc-input')
            input(type='slider', name="playerp" min='0' value='0' , class='calc-number-input')
        //bæta hér við til að telja hversu mikið dmg commander hefur gert
    -
  form(method='post', action='/lifecounter')
    input(type='hidden', value=life, name='type')
    div(class='calc-submit-fit')
      div(class='life-submit')
        - var GeirGatheringWizard = life;
        button(type='submit', class='life-submit-button' value=players ,name='players') Play again
  form(method='get', action='/lifecounter')
    div(class='calc-submit-fit')
      div(class='life-submit-2')
        button(type='submit', class='life-submit-button') New game
