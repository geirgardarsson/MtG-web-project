extends layout

block content
  h1= 'Reiknivél fyrir mana kostnað'
  p= 'hjálpar þér að segja til um blablablab'
  p= title



  form(method='post', action='/calc')
    div
      label(for='size') Fjöldi Svarta mana tákna:
      input(type='number', name="black" min='0', value=0, required)
    div
      label(for='size') Fjöldi Blárra mana tákna:
      input(type='number', name="blue" min='0', value=0, required)
    div
      label(for='size') Fjöldi Rauðra mana tákna:
      input(type='number', name="red" min='0', value=0, required)
    div
      label(for='size') Fjöldi Græna mana tákna:
      input(type='number', name="green" min='0', value=0, required)
    div
      label(for='size') Fjöldi Hvítra mana tákna:
      input(type='number', name="white" min='0', value=0, required)
    div
      label(for='size') Fjöldi Litlausa mana tákna:
      input(type='number', name="grey" min='0', value=0, required)
    div
      label(for='lands') fjöldi landa í stokknum þínum:
      input(type='number', name='lands', placeholder='23', required)

    div
      input(type='submit', name='reikna út fjöldi landa')
  p Fjöldi Svartra landa:
  p #{black}
  p Fjöldi Blárra landa:
  p #{blue}
  p Fjöldi Rauðra landa:
  p #{red}
  p Fjöldi Grænna landa:
  p #{green}
  p Fjöldi Hvíta landa:
  p #{white}
  p Fjöldi Grára landa:
  p #{grey}
